<%- include('partials/head') %>
  </head>

  <body>
    <%- include('partials/nav') %>

    <section class="max-w-6xl mx-auto px-6 py-16">
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
        Your Registered Homes
      </h2>

      <% if (registeredHomes.length===0) { %>
        <p class="text-center text-gray-500 text-lg">
          You havenâ€™t registered any homes yet.
        </p>
        <% } else { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% registeredHomes.forEach(home=> { %>
              <div class="rounded-2xl border border-gray-200 bg-white shadow-sm
                    hover:shadow-lg transition-shadow duration-300">

                <div class="h-40 bg-gradient-to-br from-rose-400 to-pink-500
                      rounded-t-2xl flex items-center justify-center text-white
                      text-xl font-semibold">
                  <%= home.houseName.charAt(0).toUpperCase() %>
                </div>

                <div class="p-5">
                  <h3 class="text-lg font-semibold text-gray-800">
                    <%= home.houseName %>
                  </h3>

                  <p class="text-sm text-gray-500 mt-1">
                    A cozy place hosted by you
                  </p>
                </div>
              </div>
              <% }) %>
          </div>
          <% } %>
    </section>

  </body>

  </html>